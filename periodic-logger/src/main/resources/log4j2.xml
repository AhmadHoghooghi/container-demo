<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="ConsoleAppender" target="SYSTEM_OUT">
      <!--      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>-->
      <PatternLayout pattern="%d{HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>

    <Elasticsearch name="elasticsearchAsyncBatch">
      <IndexName indexName="log4j2"/>
      <JacksonJsonLayout>
        <JacksonMixIn mixInClass="com.rhotiz.logger.log.MyMixIn"
          targetClass="org.apache.logging.log4j.core.LogEvent"/>
      </JacksonJsonLayout>
      <AsyncBatchDelivery>
        <JestHttp serverUris="http://localhost:9200"/>
      </AsyncBatchDelivery>
    </Elasticsearch>

  </Appenders>
  <Loggers>
    <Logger name="org.appenders.log4j2.elasticsearch" level="debug" additivity="false">
      <AppenderRef ref="ConsoleAppender" />
    </Logger>
    <Root level="info">
      <AppenderRef ref="ConsoleAppender"/>
      <AppenderRef ref="elasticsearchAsyncBatch"/>
    </Root>
  </Loggers>
</Configuration>